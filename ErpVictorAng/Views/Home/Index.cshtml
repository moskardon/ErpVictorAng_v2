@{
    Layout = null;
}
<!DOCTYPE html>
<html ng-app="erpApp">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<body ng-controller="rootCtrl">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Proyecto ERP", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, null)</li>
                    @*<li><a ui-sref="divisiones">Divisiones</a></li>
                    <li><a ui-sref="familias">Familias</a></li>*@
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Cliente<b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a ui-sref="presupuesto">Presupuesto</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Comercial<b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a ui-sref="descuento">Descuentos</a></li>
                            <li><a ui-sref="cliente">Clientes</a></li>
                            <li><a ui-sref="presupuesto">Presupuesto</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Mantenimiento<b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a ui-sref="divisiones">Divisiones</a></li>
                            <li><a ui-sref="familias">Familias</a></li>
                            <li><a ui-sref="subFamilias">Sub Familias</a></li>
                            <li class="divider"></li>                            
                            <li><a ui-sref="tipoUnidad">Tipos de Unidad</a></li>
                            <li><a ui-sref="unidad">Unidades</a></li>
                            <li class="divider"></li> 
                            <li><a ui-sref="articulo">Artículos</a></li>
                            <li><a ui-sref="descuento">Descuentos</a></li>
                            <li class="divider"></li> 
                            <li><a ui-sref="cliente">Clientes</a></li>
                            <li><a ui-sref="presupuesto">Presupuesto</a></li>
                            <li><a ui-sref="pedido">Pedido</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Contabilidad<b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a ui-sref="factura">Facturacion</a></li>
                        </ul>
                    </li>
                    <li><button type="button" class="btn btn-danger btn-sm" ng-click="logout();" ng-if="userData.isUserLoggedIn">Logout</button></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div ui-view="main">
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Proyecto ERP</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/toastr")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/app")



</body>
</html>